programa {
  funcao inicio() {
    
    inteiro numero

  escreva("\nDigite um número: \n")
  leia(numero)

  se(numero > 0){
    escreva("\n",numero," é positivo.\n")
  }

  se(numero < 0){
    escreva("\n",numero," é negativo.\n")
  }

  se(numero == 0){
    escreva("\nO número é 0.\n")
  }
  
  }
}
